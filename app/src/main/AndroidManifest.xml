<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.appcine">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCine">
        <activity
            android:name=".Views.UserConfigsActivity"
            android:exported="false" />
        <activity
            android:name=".Views.CommentsActivity"
            android:exported="false" />
        <activity
            android:name=".Views.MovieDetailItem"
            android:exported="false" />
        <activity
            android:name=".Views.Dashboard"
            android:exported="false"
            android:theme="@style/Theme.AppCine.NoStatusBar" />
        <activity
            android:name=".Views.PreferencesActivity"
            android:exported="true" />
        <activity
            android:name=".Views.MainActivity"
            android:exported="true" />
        <activity
            android:name=".Views.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>