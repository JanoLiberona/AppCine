<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppCine" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#6b5ecd</item>
        <item name="colorPrimaryVariant">#D6A54F</item>
        <item name="colorOnPrimary">#FF1F162E</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#6b5ecd</item>
        <item name="colorSecondaryVariant">#6b5ecd</item>
        <item name="colorOnSecondary">#D6A54F</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.AppCine.NoStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>


</resources>